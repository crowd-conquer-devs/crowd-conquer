<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    android:id="@+id/backgroundId"
    tools:context="com.crowdconquer.activities.LoginActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.rey.material.widget.TextView
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:text="Welcome"
            android:textColor="@color/white"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:textSize="40sp"/>

        <com.github.rahatarmanahmed.cpv.CircularProgressView
            android:id="@+id/progressViewLogin"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:visibility="gone"
            app:cpv_animAutostart="true"
            app:cpv_thickness="20dp"
            app:cpv_indeterminate="true" />

        <com.rey.material.widget.FloatingActionButton
            android:id="@+id/loginButton"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            app:rd_enable="true"
            app:fab_iconSrc="@drawable/google_icon"
            app:fab_backgroundColor="@color/white"
            app:fab_radius="40dp"
            />

        <com.rey.material.widget.FloatingActionButton
            android:id="@+id/locationButton"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:visibility="gone"
            app:rd_enable="true"
            app:fab_iconSrc="@android:drawable/ic_secure"
            app:fab_radius="40dp" />

    </LinearLayout>


</RelativeLayout>
